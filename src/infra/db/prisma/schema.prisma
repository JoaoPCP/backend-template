generator client {
  provider = "prisma-client-js"
  output   = "./../../../../prismaClient"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://joao:dev123@localhost:5432/agenda_db"
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  phoneNumber String?   @map("phone_number")
  email       String?
  password    String
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @map("updated_at")
  
  //relations
  refreshToken RefreshToken?

  @@map("users")
}

model RefreshToken {
  rtid         String @id
  userId       Int    @unique
  user         User   @relation(fields: [userId], references: [id])
  refreshToken String

  @@map("refresh_token")
}
